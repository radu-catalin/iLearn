extends layout

block content
  div.row
    div.form-container.border-content.border-radius-6.bgcolor-white.col-sm-12.col-md-10.col-lg-6.col-md-offset-3
      h1.form-title.uppercase.color-purple Adaugă Conţinut
      form(id="add" method='POST' action='/cpanel/add')
        div.input-container
          input#title(type='text', name='title', required='')
          label.color-gray.noselect(for='title') Titlu
          div.line.bgcolor-purple
        // end title
        div.input-container
          input#author(type='text', name='author', required='')
          label.color-gray.noselect(for='author') Autor
          .line.bgcolor-purple
        // end author
        div.input-container
          input#year(type='text', name='year', required='')
          label.color-gray.noselect(for='year') Anul
          .line.bgcolor-purple
        // end year
        div.input-container
          select#selectGenre.custom-select(name='selectGenre', required='')
            option(value='', selected='') Alege Genul
            option(value='Epic') Epic
            option(value='Liric') Liric
            option(value='Dramatic') Dramatic
          .line.bgcolor-purple
        // end select-genre
        div#questions-container
          div.query-container
            div.question-number
              h2.color-purple Întrebarea 1
            div.input-container
              input#question1(type='text', name='question1', required='')
              label.color-gray.noselect(for='question1') Întrebare
              div.line.bgcolor-purple
            // end question
            div.input-container.input-answer
              textarea#answer1(name='answer1', required='')
              label.color-gray.noselect(for='answer1') Răspuns
              div.line.bgcolor-purple
          div.addFields-container
            button#addFields.bgcolor-purple.color-white.bgcolor-purple-hover.border-radius-2(type='button') +
          div.submit-container
            input.border-radius-2.bgcolor-purple.bgcolor-purple-hover.uppercase(type='submit', value='adaugă conţinut')
            
        
